@model SportsHub.Models.Activity

@{
    ViewBag.Title = "Create";
}

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Create Activity</legend>
        
        <div class="editor-label">
            @Html.LabelFor(model => model.Name)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Name)
            @Html.ValidationMessageFor(model => model.Name)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.PreferredTime)
        </div>
        <div class="editor-field">
            @Html.DropDownListFor(model => model.PreferredTime, new SelectList(new [] {"4:00PM","4:30PM","5:00PM","5:30PM","6:00PM","6:30PM"}), "--Select A Time--")
            @Html.ValidationMessageFor(model => model.PreferredTime)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.DayOfTheWeek)
        </div>
        <div class="editor-field">
            @Html.DropDownListFor(model => model.DayOfTheWeek, 
                              new SelectList(new [] {"Monday","Tuesday","Wednesday","Thursday","Friday","Saturday","Sunday"}), 
                              "-- Select Day Of The Week --")
            @Html.ValidationMessageFor(model => model.DayOfTheWeek)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.RequiredNumberOfPlayers)
        </div>
        <div class="editor-field">
            @Html.DropDownListFor(model => model.DayOfTheWeek, 
                              new SelectList(new [] {"1","2","3","4","5","6","7"}), 
                              "-- Select Required Number Of Players --")
            @Html.ValidationMessageFor(model => model.RequiredNumberOfPlayers)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.RecommendedNumberOfPlayers)
        </div>
        <div class="editor-field">
            @Html.DropDownListFor(model => model.DayOfTheWeek, 
                              new SelectList(new [] {"1","2","3","4","5","6","7"}), 
                              "-- Select Recomended Number Of Players --")
            @Html.ValidationMessageFor(model => model.RecommendedNumberOfPlayers)
        </div>

        <p style="margin-top:10px;">
            <input class="btn btn-primary" type="submit" value="Create" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "ManageActivities", "Admin")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
