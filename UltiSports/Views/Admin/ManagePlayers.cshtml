@model IEnumerable<UltiSports.Models.Player>

@{
    ViewBag.Title = "ManagePlayers";
}

@if (!String.IsNullOrEmpty(ViewBag.Message))
{
    <div class="page-header-sport">
        <div class="row">
            <div class="alert alert-warning">
                <p>
                    <strong>System Says:</strong>
                    @ViewBag.Message
                </p>
            </div>
        </div>
    </div>
}<br />
<h5 class="pull-left">Administration Suite</h5>
<span class="date pull-right">@DateTime.Today.ToString("dddd, MMMM dd yyyy")</span>
<div class="clear"></div>
<div class="tab-container">
    <div class="tab">
        <h2>@Html.ActionLink("Activities", "ManageActivities", "Admin")</h2>
    </div>
    <div class="tab tab-selected">
            <h2>@Html.ActionLink("Players", "ManagePlayers", "Admin")</h2>
        </div>
    <div class="tab">
        <h2>@Html.ActionLink("Locations", "ManageLocations", "Admin")</h2>
    </div>
    <div class="tab">
        <h2>@Html.ActionLink("Today's Events", "ManageEventsOfTheDay", "Admin")</h2>
    </div>
    <div class="clear"></div>
</div>
    <div class="event-container row">
        @*<p style="padding: 5px;">
            @Html.ActionLink("Create New", "Create")
        </p>*@
        <table class="table table-striped">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Email)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.isActive)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.isActive)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", "Player", new { username = item.Username }, null)
                    </td>
                </tr>
            }

        </table>
    </div>
</div>
